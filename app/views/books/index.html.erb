<% if @book.errors.any? %>
  <%= @book.errors.count %>2 errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<table>
   <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </tr>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
       <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
       <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
       </td>
      </tr>
      <% end %>
    </tbody>
</table>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
<h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


